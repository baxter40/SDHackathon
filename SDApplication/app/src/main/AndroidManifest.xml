<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matt.sdapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/verylogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Basket"
            android:label="Checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Basket2"
            android:label="Checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PreCheckout1"
            android:label="@string/title_activity_pre_checkout1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PreCheckout2"
            android:label="@string/title_activity_pre_checkout2"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>